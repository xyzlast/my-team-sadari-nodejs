doctype html
html(ng-app="myApp")
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.css')
      link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap-theme.css')
      link(rel='stylesheet', href='/vendor/kendo/src/styles/web/kendo.common.css')
      link(rel='stylesheet', href='/vendor/kendo/src/styles/web/kendo.default.css')
      link(rel='stylesheet', href='/css/style.css')

  body
    div(class="container" ng-controller="MainCtrl")
      div(class="header")
        ul(class="nav nav-pills pull-right")
          li
            a Home
          li
            a Statistics
        h3(class="text-muted") Without Me!!
      div
        div(ng-show="messageShown", class="alert alert-{{messageType}}" role="alert") {{globalMessage}}
          button(type="button" class="close" data-dismiss="alert")
            span(aria-hidden="true") &times;
            span(class="sr-only") Close
        block content
      div(class="footer")
        p
          span(class="glyphicon glyphicon-heart") from the yeoman team

  script(src='http://localhost:35729/livereload.js')
  script(src='/components/jquery/dist/jquery.min.js')
  script(src='/components/bootstrap/dist/js/bootstrap.min.js')
  script(src='/components/angular/angular.js')
  script(src='/components/angular-resource/angular-resource.js')
  script(src='/components/angular-cookies/angular-cookies.js')
  script(src='/components/angular-sanitize/angular-sanitize.js')
  script(src='/components/angular-animate/angular-animate.js')
  script(src='/components/angular-touch/angular-touch.js')
  script(src='/components/lodash/dist/lodash.compat.js')
  script(src='/components/restangular/dist/restangular.min.js')
  script(src='/vendor/kendo/js/kendo.all.min.js')
  script(src='/vendor/kendo/js/cultures/kendo.culture.ko-KR.min.js')
  script(src='/js/app.js')
  script(src='/js/services/gameservice.js')
  script(src='/js/controllers/main.js')
  script(src='/js/controllers/gamecalendar.js')
